<div class="container shadow-lg p-3 mb-5 bg-primary-subtle rounded">
  <div class="container shadow-lg p-3 bg-primary-subtle rounded">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <p class="h1 bg-body-secondary">パスワード再設定</p>
          <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <%= f.hidden_field :reset_password_token %>
            <div class="field mt-3">
              <%= f.label :新しいパスワード, class: "translatable-text mt-4 mb-3" %>
              <% if @minimum_password_length %>
                (<%= @minimum_password_length %> 文字以上)
              <% end %>
              <%= f.password_field :password, autofocus: true, class: "form-control w-25 mx-auto" %>
            </div>
            <div class="field mt-3">
              <%= f.label :新しいパスワード（確認用）, class: "translatable-text mt-4 mb-3" %>
              <%= f.password_field :password_confirmation, class: "form-control w-25 mx-auto" %>
            </div>
            <div class="actions mt-3">
            <%= button_tag(type: 'submit', class: "btn btn-success translatable-text") do %>
              パスワード変更
            <% end %>
          </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
