<div class="container shadow-lg p-3 mb-3 bg-primary-subtle rounded">
  <div class="container shadow-lg p-3 bg-primary-subtle rounded">
    <p class="h3 fw-bold mb-5">プロフィール編集</p>
    <%= form_with model: @user do |f| %>
      <div class="mb-3 col-12 text-start">
        <p class="h5 fw-bold">プロフィール画像</p>
        <%= f.file_field :avatar, class: "form-size d-grid col-12" %>
      </div>
      <div class="mb-3 col-12 text-start">
        <%= f.label :name ,"名前", class: "form-label Form__label--required fw-bold fs-5" %>
        <%= f.text_field :name, class: "form-size d-grid col-12" %>
      </div>
      <div class="mb-3 col-12 text-start">
        <%= f.label :email ,"メールアドレス", class: "form-label Form__label--required fw-bold fs-5" %>
        <%= f.text_field :email, class: "form-size d-grid col-12" %>
      </div>
      <div class="mb-3 col-12 text-start">
        <%= f.label :introduction ,"ひとこと紹介文", class: "form-label Form__label--required fw-bold fs-5" %>
        <%= f.text_area :introduction, class: "form-size d-grid col-12 mb-5" %>
      </div>
      <div>
        <ul>
          <%= f.submit "編集を完了する", class: "col-8 col-md-5 btn btn-primary mx-3 mb-3" %>
          <%= link_to "プロフィールへ戻る", user_path(current_user), class: "col-8 col-md-5 btn btn-primary mx-3 mb-3" %>
        </ul>
      </div>
    <% end %>
  </div>
</div>
