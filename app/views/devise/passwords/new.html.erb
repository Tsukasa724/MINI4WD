<div class="container shadow-lg p-3 mb-5 bg-primary-subtle rounded">
  <div class="container shadow-lg p-3 bg-primary-subtle rounded">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
        <p class="h1 bg-body-secondary">パスワードの再設定</p>
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field mt-3">
            <%= f.label :ご登録のメールアドレス, class: "translatable-text mt-4 mb-3" %>
            <%= f.email_field :email, autofocus: true, placeholder: "メールアドレス入力", class: "form-control mx-auto mb-4" %>
          </div>
          <div class="actions mt-3">
            <%= button_tag(type: 'submit', class: "btn btn-secondary translatable-text") do %>
              パスワード再設定用リンク送信
            <% end %>
          </div>
        <% end %>
        </div>
      </div>
    </div>
    <%= link_to "戻る", :back, class: "col-8 col-md-2 mx-auto btn btn-primary mt-4" %>
  </div>
</div>
